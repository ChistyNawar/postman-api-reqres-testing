		{
			"name": "Get single user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"\r",
							"\r",
							"pm.test(\"User ID is correct\", function(){\r",
							"    pm.expect(response.data.id).to.eql(parseInt(pm.collectionVariables.get(\"userID\")));\r",
							"})\r",
							"\r",
							"pm.test(\"Response time is less than 500ms\", function(){\r",
							"    pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"})\r",
							"\r",
							"pm.test(\"First name is a string\", function(){\r",
							"    pm.expect(\"response.data.first_name\").to.be.a(\"string\")\r",
							"})\r",
							"\r",
							"pm.test(\"Email is valid\", function(){\r",
							"    pm.expect(\"response.data.email\").to.match(/^[\\w-]+(\\.[\\w-]+)*@([\\w-]+\\.)+[a-zA-Z]{2,7}$/)\r",
							"})"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "reqres-free-v1",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userID}}",
					"host": [
