		{
			"name": "Get User List",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();",
							"",
							"let userId = response.data && response.data[4] ? response.data[4].id : null;",
							"pm.collectionVariables.set(\"userID\", userId);",
							"",
							"// Log the value that was set to avoid reference errors and confirm correctness",
							"console.log(\"userID set to:\", pm.collectionVariables.get(\"userID\"));",
							"",
							"// Optional basic validation to ensure we captured an ID",
							"pm.test(\"userID is captured from response\", function () {",
							"    pm.expect(pm.collectionVariables.get(\"userID\")).to.exist;",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "reqres-free-v1",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users"
					],
					"query": [
						{
							"key": "",
							"value": "",
							"disabled": true
						}
					]
				}
			},
